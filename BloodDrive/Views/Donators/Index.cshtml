@model IEnumerable<BloodDrive.Models.Donator>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@await Component.InvokeAsync("DonorCount")

<p>
    <a class="btn btn-outline-primary btn-sm"  asp-action="Create">Create New</a>
    
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Phone Number
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Elligible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BloodType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Elligible)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BloodType.Type)
            </td>
            <td>
                <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a class="btn btn-outline-primary btn-sm" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
