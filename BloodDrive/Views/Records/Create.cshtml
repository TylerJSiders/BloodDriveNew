@model BloodDrive.Models.Record

@{
    ViewData["Title"] = "Create";
}

<h1>Create Record</h1>

<h4>@ViewBag.Donator.FirstName @ViewBag.Donator.LastName</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" contenteditable="false" hidden="hidden">
                <label asp-for="@Model.DonatorID" class="control-label"></label>
                <input asp-for="@Model.DonatorID" value="@ViewBag.Donator.ID" class="form-control" />
                <span asp-validation-for="@Model.DonatorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Date Donated</label>
                <input asp-for="@Model.DateDonated" value="@DateTime.Now" class="form-control" />
                <span asp-validation-for="@Model.DateDonated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

